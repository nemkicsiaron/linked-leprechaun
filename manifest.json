{
    "manifest_version": 3,
    "name": "LinkedIn Cover Letter Generator",
    "version": "1.0",
    "description": "Generate a cover letter from a LinkedIn job post.",
    "author": "aronfszabo@gmail.com",
    "incognito": "spanning",

    "permissions": [
      "activeTab",
      "scripting",
      "contextMenus"
    ],
    "host_permissions": [
      "https://*.linkedin.com/*"
    ],
    "icons": {
      "48": "./images/icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["https://*.linkedin.com/*"],
        "js": ["./scripts/linkedin_data.js"]
    }],
    "action": {
      "default_popup": "./popup/popup.html",
      "default_icon": {
        "16": "./images/icon.png",
        "48": "./images/icon.png",
        "128": "./images/icon.png"
      }
    },
    "web_accessible_resources": [
      {
        "resources": ["./scripts/*"],
        "matches": ["https://*.linkedin.com/*"]
      }
    ],
    "options_ui": {
      "page": "./options/options.html",
      "open_in_tab": true
    }
  }
