{
    "manifest_version": 3,
    "name": "LinkedIn Data Processor",
    "version": "1.0",
    "description": "Generate a cover letter from a LinkedIn job post.",
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "https://www.linkedin.com/*"
    ],
    "icons": {
      "48": "./images/icon.ico"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/*"],
        "js": ["./scripts/linkedin_data.js"]
      }
    ],
    "action": {
      "default_popup": "./popup/popup.html",
      "default_icon": {
        "16": "./images/icon.ico",
        "48": "./images/icon.ico",
        "128": "./images/icon.ico"
      }
    },
    "web_accessible_resources": [
      {
        "resources": ["./scripts/linkedin_data.js"],
        "matches": ["https://www.linkedin.com/*"]
      }
    ]
  }
